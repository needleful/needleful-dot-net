<!-- Comic Formats -->
<template name='comic-needleful'>
	<param name='title' type='text'/>
	<param name='page' type='text,integer'/>
	<param name='source' type='text,file'/>
	<param name='description' type='xml' required='false'/>
	<param name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>{{title}} - Needleful</title>
				<link rel='stylesheet' href='/needleful.css'/>
			</head>
			<body>
				<div id='content'>
					<ul class='header'>
						<li>Needleful Comics</li>
						<li><a href='/'>Home</a></li>
					</ul>
					<img class='comic' src='{{source}}' alt='Comic: {{title}}'/>
					<div id='comic-buttons'>
						<cond comp='{{page}}==1'>
							<true>
								<p class='align-left'>
									At the first!
								</p>
							</true>
							<false>
								<a href='/comic/needleful/{{title - 1}}.html' class='align-left'>
									&lt;&lt; Previous
								</a>
							</false>
						</cond>
						&nbsp;
						<cond src-file-exists='comic/needleful/{{page + 1}}.page.xml'>
							<true>
								<a href='/comic/needleful/{{page + 1}}.html' class='align-right'>
									Next &gt;&gt;
								</a>
							</true>
							<false>
								<p class='align-right'>
									Come back later!
								</p>
							</false>
						</cond>
					</div>
					<h1>{{title}}</h1>
					<div class='description'>
						{{description}}
					</div>
					<div class='transcript'>
						<p>TRANSCRIPT:</p>
						{{transcript}}
					</div>
				</div>
			</body>
		</html>
	</content>
</template>