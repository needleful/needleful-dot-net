<!-- Comic Formats -->
<template name='comic-needleful'>
	<param name='title' type='text'/>
	<param name='page' type='text,integer'/>
	<param name='source' type='text,file'/>
	<param name='description' type='xml'/>
	<param required='false' name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>{{title}} - Needleful</title>
			</head>
			<body>
				<h1>{{title}}</h1>
				<img source='{{source}}' />
				<div class='description'>
					{{description}}
				</div>
				<div type='transcript'>
					{{transcript}}
				</div>
			</body>
		</html>
	</content>
</template>