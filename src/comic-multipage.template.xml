<template name='comic-needleful-multipage'>
	<param name='title' type='text'/>
	<param name='page' type='text,integer'/>
	<param name='sources' type='list'>
		<param name='source' type='text,file'/>
	</param>
	<param name='description' type='xml' required='false'/>
	<param name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>{{title}} - Needleful</title>
				<link rel='stylesheet' href='/needleful.css'/>
			</head>
			<body>
				<div id='content'>
					<ul class='header'>
						<li>Needleful Comics</li>
						<li><a href='/'>Home</a></li>
					</ul>
					<ForEach list='sources' i='i'>
						<img class='comic' src='{{source}}' alt='Comic: {{title}} page {{i}}'/>
						<br />
					</ForEach>
					<div id='comic-buttons'>
						<Match f='get' x='{{page == 1}}'>
							<True>
								<a href='comic/needleful/1.html' class='align-left'>First</a>
								<p class='align-left'>
									At the first!
								</p>
							</True>
							<False>
								<a href='/comic/needleful/{{page - 1}}.html' class='align-left'>
									Previous
								</a>
							</False>
						</Match>

						<Match f='src-file-exists' x='comic/needleful/{{page + 1}}.page.xml'>
							<True>
								<a href='/comic/needleful/{{page + 1}}.html' class='align-right'>
									Next
								</a>
							</True>
							<False>
								<p class='align-right'>
									Come back later!
								</p>
							</False>
						</Match>
					</div>
					<h1>{{title}}</h1>
					<div class='description'>
						{{description}}
					</div>
					<div class='transcript'>
						<p>TRANSCRIPT:</p>
						{{transcript}}
					</div>
				</div>
			</body>
		</html>
	</content>
</template>