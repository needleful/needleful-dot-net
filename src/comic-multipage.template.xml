<template name='comic-needleful-multipage'>
	<param name='title' type='text'/>
	<param name='page' type='text,integer'/>
	<param name='sources' type='list'>
		<param name='source' type='text,file'/>
	</param>
	<param name='description' type='xml' required='false'/>
	<param name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>{{title}} - Needleful</title>
				<link rel='stylesheet' href='/needleful.css'/>
			</head>
			<body>
				<div id='content'>
					<ul class='header'>
						<li>Needleful Comics</li>
						<li><a href='/'>Home</a></li>
					</ul>
					<foreach list='sources' i='i'>
						<img class='comic' src='{{source}}' alt='Comic: {{title}} page {{i}}'/>
						<br />
					</foreach>
					<h1>{{title}}</h1>
					<div class='description'>
						{{description}}
					</div>
					<div class='transcript'>
						<p>TRANSCRIPT:</p>
						{{transcript}}
					</div>
				</div>
			</body>
		</html>
	</content>
</template>