<!-- Comic Formats -->
<template name='comic-needleful'>
	<param name='title' type='text'/>
	<param name='page' type='text,integer'/>
	<param name='source' type='text,file'/>
	<param name='description' type='xml' required='False'/>
	<param name='transcript' type='xml'/>
	<content>
		<html>
			<head>
				<title>{{title}} - Needleful</title>
				<link rel='stylesheet' href='/needleful.css'/>
			</head>
			<body>
				<div id='content'>
					<ul class='header'>
						<li>Needleful Comics</li>
						<li><a href='/'>Home</a></li>
					</ul>
					<div class='comic-wrapper'>
						<img class='comic' src='{{source}}' alt='Comic: {{title}}'/>
					</div>
					<div id='comic-buttons'>
						<Match value='{{page == 1}}' html-class='inline-button'>
							<True>
								<p class='align-left'>
									At the first!
								</p>
							</True>
							<False>
								<a href='/comic/needleful/1.html' class='align-left'>First</a>
								<a href='/comic/needleful/{{page - 1}}.html' class='align-left'>Previous</a>
							</False>
						</Match>
						<Match f='src-file-exists' x='comic/needleful/{{page + 1}}.page.xml' html-class='inline-button'>
							<True>
								<a href='/comic/needleful/{{page + 1}}.html' class='align-right'>Next</a>
							</True>
							<False>
								<p class='align-right'>Come back later!</p>
							</False>
						</Match>
					</div>
					<h1>{{title}}</h1>
					<div class='description'>
						{{description}}
					</div>
					<div class='transcript'>
						<p>TRANSCRIPT:</p>
						{{transcript}}
					</div>
				</div>
			</body>
		</html>
	</content>
</template>